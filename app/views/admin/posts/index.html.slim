- content_for(:title, @clase_modelo.nombre_plural)
- content_for :actions do
  = @clase_modelo.new.decorate.new_link
  = @clase_modelo.new.decorate.export_link(admin_posts_path(format: 'xlsx'))
.form-wrapper
  = smart_listing_controls_for(:posts) do |c|
    = @filtros.filtros_html

  .card.float-e-margins
    .card-header
      h5 Listado de #{@clase_modelo.nombre_plural.downcase}
    .card-body
      = smart_listing_render(:posts, data: { href: admin_posts_path})
